        <DataTemplate>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Image Source=" {Biinding OS_Image}" Width="75"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="imgPhone" HorizontalAlignment="Left" Height="235" Margin="48.533,145,0,0" VerticalAlignment="Top" Width="212" Grid.Column="1"/>
        <TextBlock x:Name="tblkPrice" HorizontalAlignment="Left" Margin="99.533,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="153" Height="62" Grid.Column="1"/>
        <ListBox x:Name="lbxPhone" HorizontalAlignment="Left" Height="276" Margin="86,78,0,0" VerticalAlignment="Top" Width="225" SelectionChanged="LbxPhone_SelectionChanged"/>

    </Grid>
</Window>
